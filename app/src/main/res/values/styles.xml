<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Text styles -->
    <style name="LoginText" parent="NormalText">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:textColor">@color/colorNormalText</item>
    </style>

    <style name="SubtitleText" parent="NormalText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSubtitles</item>
    </style>

    <style name="NormalButton" parent="NormalText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Message" parent="NormalText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorMsg</item>
    </style>

    <style name="LoadingMessage" parent="NormalText">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Other styles -->
    <style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorToggle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>
